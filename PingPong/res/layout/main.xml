<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="fill_parent"
	android:orientation="vertical">

	<TextView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:text="Orientation" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:text="X Value" android:id="@+id/xvalues" />

	<TextView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:text="Y Value" android:id="@+id/yvalues" />
	<TextView android:text="Z Value" android:layout_width="fill_parent"
		android:id="@+id/zvalues" android:layout_height="wrap_content" />
		
	<TextView android:text="Mouse click" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/mouse"/>
	<LinearLayout
		android:layout_width = "match_parent"
		android:layout_height = "fill_parent"
		android:gravity = "center" android:weightSum="1">
		<Button android:text="CLICK" android:layout_width="wrap_content" android:id="@+id/button" android:layout_weight="0.51" android:layout_height="157dp"></Button>
	</LinearLayout>
</LinearLayout>